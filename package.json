{
    "name": "@marchyang/create-react-app",
    "version": "0.0.7",
    "description": "",
    "main": "./dist/main.cjs",
    "bin": "./dist/main.cjs",
    "scripts": {
        "dev": "node --loader ts-node/esm ./src/index.ts",
        "dev2": "ts-node ./src/index.ts",
        "dev:debug": " node --inspect-brk  --loader ts-node/esm ./src/index.ts",
        "build:js": "npm run clean:lib && tsc && tsc-alias",
        "build:prod": "webpack && cp -rf ./src/template ./dist",
        "eslint": "eslint ./src --fix",
        "lint-staged": "lint-staged",
        "prepublishOnly": "npm run build:prod && npm version patch",
        "postpublish": "git add . && git commit -m 'update package version' --no-verify && git push origin master"
    },
    "author": "",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/March-Wind/create-react-app.git"
    },
    "devDependencies": {
        "@babel/core": "^7.20.5",
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-proposal-decorators": "^7.20.5",
        "@babel/plugin-proposal-object-rest-spread": "^7.20.2",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.18.6",
        "@commitlint/cli": "^17.5.1",
        "@commitlint/config-conventional": "^17.4.4",
        "@types/jest": "^29.5.0",
        "@types/node": "^18.15.11",
        "@typescript-eslint/eslint-plugin": "^5.57.0",
        "@typescript-eslint/parser": "^5.57.0",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^9.1.0",
        "core-js": "^3.26.1",
        "eslint": "^8.37.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-jest": "^27.2.1",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "lint-staged": "^13.2.0",
        "markdown-eslint-parser": "^1.2.1",
        "prettier": "^2.8.7",
        "stylelint-config-prettier": "^9.0.5",
        "stylelint-prettier": "^2.0.0",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.2",
        "tsconfig-paths": "^4.1.1",
        "tslib": "^2.4.1",
        "typescript": "^4.9.4",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1"
    },
    "type": "module",
    "files": [
        "dist/*",
        "*.md",
        "package.json"
    ],
    "lint-staged": {
        "**.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --config .prettierrc --write"
        ],
        "*.+(css|less|scss|sass)": "stylelint --fix"
    },
    "dependencies": {
        "execa": "^7.1.1",
        "listr2": "^5.0.8",
        "stylelint": "^14.3.0"
    }
}
